<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.minh.lapitchat.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/image1"
        android:id="@+id/setting_image"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="170dp" />

    <TextView
        android:id="@+id/setting_displayname"
        android:textColor="#fff"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Display Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/setting_status"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Hi there! I'm using Lapit Chat App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="#fff"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/setting_image_btn"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Change image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:id="@+id/setting_status_btn"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Change Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
