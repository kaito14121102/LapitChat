<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.minh.lapitchat.ProfileActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:src="@drawable/image1"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <LinearLayout
        android:background="#000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:id="@+id/profile_displayname"
            android:text="Display Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:id="@+id/profile_status"
            android:text="Current User Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="#fff"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:id="@+id/profile_total_friend"
            android:text="Total Friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/profile_btn_send_request"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:text="SEND FRIEND REQUEST"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/profile_btn_decline_request"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:text="DECLINE FRIEND REQUEST"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
